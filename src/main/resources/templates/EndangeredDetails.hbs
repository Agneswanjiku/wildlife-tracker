{{#partial "content"}}
    {{#if animals}}
        <div class="container">
            <div class="row">
                <div class="container">
                    <div class="card text-primary border-primary text-center" style=" height:auto" id="landingCard">
                        <div class="card-body">
                            <h3 class="card-title intro">Available Endangered animals</h3>
                            <table class="table table-dark">
                                <tbody>
                                <ul class="intro"style="font-size:15px">
                                    <li>Animal Number.</li>
                                    <li>Animal Name</li>
                                    <li>Health</li>
                                    <li>Age</li>
                                </ul>
                                {{#each animals}}
                                    <ul>
                                        <li><span></span>{{id}}</li>
                                        <li><span></span>{{name}}</li>
                                        <li> <span></span>{{health}}</li>
                                        <li>  <span></span>{{age}}</li>
                                    </ul>

                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>

        </div>









    {{/if}}






{{/partial}}






{{> layout.hbs}}